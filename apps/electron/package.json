{
  "name": "@jrpm/electron",
  "version": "0.1.0",
  "private": true,
  "main": "electron-main.ts",
  "type": "module",
  "scripts": {
    "dev": "cross-env APP_URL=$APP_URL electron -r ts-node/register/transpile-only ./electron-main.ts",
    "build": "electron-builder",
    "lint": "eslint \"**/*.{ts,tsx}\""
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9.13.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "build": {
    "appId": "com.jrpm.app",
    "files": [
      "electron-main.ts",
      "preload.ts",
      "package.json"
    ],
    "asar": true,
    "directories": { "output": "dist" },
    "publish": null
  }
}